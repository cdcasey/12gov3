---
import { getCollection } from 'astro:content';
import PageLayout from '@/layouts/PageLayout.astro';
import PageTitle from '@/components/PageComponents/PageTitle.astro';
import Posts from '@/components/Posts.astro';
import BaseLayout from '../layouts/BaseLayout.astro';

const allPosts = await getCollection('posts');

const transcripts = allPosts.filter((post) => post.data.categories.includes('transcripts'));
---

<BaseLayout title="Transcripts">
	<PageTitle>Transcripts</PageTitle>
	<p class="intro">Full text transcripts of our episodes for accessibility and reference.</p>
	<Posts posts={transcripts} />
</BaseLayout>

<style>
	.intro {
		margin-bottom: var(--spacing-8);
	}
</style>
