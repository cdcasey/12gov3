---
import IconLink from './IconLink.astro';

type Icon = {
	href: string;
	title: string;
	path: string;
};

interface Props {
	title: string;
	icons: Icon[];
}

const { title, icons } = Astro.props;
---

<div class="grid-wrapper">
	<div class="icon-label">{title}:</div>
	<div class="icon-container">
		{icons.map((icon) => <IconLink href={icon.href} path={icon.path} title={icon.title} />)}
	</div>
</div>

<style>
	.grid-wrapper {
		display: grid;
		grid-template-columns: 1fr 2fr;
		align-items: center;
	}
	.icon-label {
		font-family: var(--font-header);
		text-align: right;
		font-size: var(--text-2xl);
	}

	.icon-container {
		display: flex;
		justify-content: space-evenly;
	}
</style>
