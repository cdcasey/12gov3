---
interface Props {
	href: string;
	title: string;
	path: string;
}

const { href, title, path } = Astro.props;
---

<a href={href} target="_blank" rel="noopener noreferrer">
	<svg width="32" height="32" viewBox="0 0 32 32" class="fill-otgowhite">
		<title>{title}</title>
		<path d={path}></path>
	</svg>
</a>

<style>
	svg {
		@apply transition-colors hover:fill-otgoorange-light;
	}
</style>
