---
import FooterTags from './FooterSections/FooterTags.astro';
import FooterLogo from './FooterSections/FooterLogo.astro';
import FooterIcons from './FooterSections/FooterIcons.astro';
---

<footer>
	<FooterTags />
	<FooterLogo />
	<FooterIcons />
</footer>

<style>
	footer {
		@apply grid grid-rows-3 items-center bg-otgogreen-medium p-3 text-otgowhite md:grid-cols-3;
		& section {
			@apply border;
		}
	}
</style>
