---
import FooterTags from './FooterSections/FooterTags.astro';
import FooterLogo from './FooterSections/FooterLogo.astro';
import FooterIcons from './FooterSections/FooterIcons.astro';
---

<footer>
	<FooterTags />
	<FooterLogo />
	<FooterIcons />
</footer>

<style>
	footer {
		background-color: var(--otgogreen-medium);
		color: var(--otgowhite);
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: calc(8 * var(--spacing));
		padding: calc(3 * var(--spacing));
	}

	@media (min-width: 48rem) { /* md: breakpoint */
		footer {
			display: grid;
			grid-template-columns: repeat(3, minmax(0, 1fr));
			gap: 0;
		}
	}

</style>
