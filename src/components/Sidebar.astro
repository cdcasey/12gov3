---
import { Image } from 'astro:assets';

import PatronList from './SideBarSections/PatronList.astro';
import Image01 from '@/assets/sidebar/01.jpg';
import Divider from './Divider.astro';
---

<aside>
	<Divider class="divider" />
	<PatronList />
	<Divider class="divider" />
	<Image src={Image01} alt="" />
	<Divider class="divider" />
</aside>

<style>
	aside {
		@apply max-w-44;
	}
	.divider {
		@apply hidden md:block;
	}
	img {
		@apply hidden md:block;
	}
</style>
