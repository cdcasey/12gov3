---
import PatronList from './SideBarSections/PatronList.astro';
import SidebarImages from './SideBarSections/SidebarImages.astro';
import Divider from './Divider.astro';
---

<aside>
	<Divider class="topDivider" />
	<PatronList />
	<section class="imagesSection">
		<Divider />
		<SidebarImages />
		<Divider />
	</section>
</aside>

<style>
	aside {
		max-width: calc(52 * var(--spacing));
	}

	.topDivider {
		margin-top: 0;
	}

	.imagesSection {
		display: none;
	}

	@media (min-width: 48rem) {
		.imagesSection {
			display: block;
		}
	}
</style>
