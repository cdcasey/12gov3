---
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import '@fontsource/cabin';
import Cabin from '@fontsource/cabin/files/cabin-latin-400-normal.woff2?url';
import '@fontsource/lilita-one';
import Lilita1 from '@fontsource/lilita-one/files/lilita-one-latin-400-normal.woff2?url';
import MenuButton from '@/components/Menu/MenuButton.astro';
import Menu from '@/components/Menu/Menu.astro';
// import 'media-chrome';

import { metadata } from '@/constants/metadata';

interface Props {
	title?: string;
}

const { title } = Astro.props;

const seoTitle = title ? `${title} | ${metadata.title}` : metadata.title;
console.log({ seoTitle });

import '@/styles/global.css';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/lettuce.png" />
		<link rel="preload" as="font" type="font/woff2" href={Lilita1} crossorigin="anonymous" />
		<link rel="preload" as="font" type="font/woff2" href={Cabin} crossorigin="anonymous" />
		<meta name="generator" content={Astro.generator} />

		<title>{seoTitle}</title>

		<!-- Meta Tags -->
		<meta charset="utf-8" />
		<meta name="description" content=`${metadata.description}` />
		<meta property="og:title" content=`${seoTitle}` />
		<meta property="og:description" content=`${metadata.description}` />
		<meta property="og:type" content="website" />
		<meta
			property="og:image"
			content="https://12go.onetogrowonpod.com/wp-content/uploads/2019/04/OTGO-1400.jpg"
		/>

		<!-- Twitter Cards -->
		<meta name="twitter:card" content="summary" />
		<meta name="twitter:creator" content=`${metadata.author}` />
		<meta name="twitter:title" content=`${seoTitle}` />
		<meta name="twitter:description" content=`${metadata.description}` />
		<meta
			property="twitter:image"
			content="https://12go.onetogrowonpod.com/wp-content/uploads/2019/04/OTGO-1400.jpg"
		/>

		<!-- Optional Keywords Meta Tag -->
		<meta name="keywords" content=`${metadata.keywords.join(', ')}` />

		<script type="module" src="https://cdn.jsdelivr.net/npm/media-chrome@4/+esm"></script>
	</head>
	<body>
		<MenuButton />
		<Menu />
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style>
	@reference '@/styles/global.css';
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
	main {
		margin: auto;
		padding: 8px;
		max-width: 960px;
	}
</style>
