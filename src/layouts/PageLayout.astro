---
import BaseLayout from './BaseLayout.astro';
import Sidebar from '../components/Sidebar.astro';
---

<BaseLayout>
	<div class="wrapper">
		<slot />
		<Sidebar />
	</div>
</BaseLayout>

<style>
	@reference '@/styles/global.css';
	.wrapper {
		@media (min-width: 48rem) {
			.wrapper {
				display: flex;
				gap: calc(var(--spacing) * 8); /* 8 * 0.25rem = 2rem, since Tailwind's gap-8 represents 8 units of 0.25rem */
			}
		}

	}
</style>
